
@{
    Layout = null;
    ViewBag.Title = "H1024";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>

    <script src="~/Scripts/jquery-1.8.2.js"></script>
 


    <style type="text/css">
        body, div, img, input {
            font-size: 14px;
            font: Arial, Helvetica, sans-serif, "宋体";
            margin: 0px;
            padding: 0px;
        }

        img, input {
            vertical-align: middle;
        }

        body {
            padding-top: 20px;
            background-color: #016eac;
        }

        .box {
            width: 1000px;
            margin: 0 auto;
        }

        .top {
            width: 1000px;
            height: 119px;
            background-image: url("../../asserts/img/top_bg.png") ;
         
        }

        .logo {
            padding-top: 20px;
        }

        .login {
            width: 574px;
            height: 101px;
            padding-top: 280px;
            padding-left: 30px;
            color: #ffffff;
            margin: 0 auto;
           
            background-image: url('../../asserts/img/login_bg.png');
        }

        .down {
            width: 1000px;
            height: 267px;
        
            background-image: url("../../asserts/img/down_bg.png") ;
        }
    </style>


    <link href="~/assets/css/style.css" rel="stylesheet" />
    


</head>
<body>
    <form id="form1">
        <div>
            <div>
                <div class="box">
                    <div class="top">
                        <div class="logo">
                        
                       
                        </div>
                    </div>
                    <div class="login">
                        账号:
                        <input ID="tb_name" name="UserName" type="text" style="width: 180px; height:30px;" />

                        密码:
                        <input ID="tb_pwd" name="Password" type="password" style="width: 180px; height: 30px;" />

                   
                        <input ID="btn_login" type="button" value="登 录" style="width: 80px; height: 30px; cursor: pointer" />
                    </div>
                    <div class="down"></div>

                </div>
            </div>

        </div>
    </form>
    <script>
    $("#btn_login").click(function() {
        $.ajax({
            url: "/Login/Login",
            type: "POST",
            data: $("#form1").serialize(),
            success: function(result) {

                if (!result.Success) {
                    alert(result.Message);
                    return false;
                }
                window.location.href = '/Home/Index';
                return true;
            }
        });

    });
    </script>
</body>




</html>
